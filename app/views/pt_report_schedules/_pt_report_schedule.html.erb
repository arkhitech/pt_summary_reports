<div id=pt_report_schedule_<%=pt_report_schedule.id%>>                                                                                                                            
  <p>
    <b>Report time:</b>
    <%= pt_report_schedule.report_time.strftime('%H:%M') %> UTC
    <%= link_to 'Edit', edit_pt_account_pt_report_schedule_path(pt_report_schedule.pt_account, 
      pt_report_schedule), class:'btn btn-mini' %>
    <%= link_to 'Destroy Schedule', [pt_report_schedule.pt_account, pt_report_schedule], 
      method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-mini btn-danger' %>
  </p>
  <p>
    <%if pt_report_schedule.pt_report_receivers.any? %>
      <%= render :partial => "pt_report_receivers/pt_report_receiver", :collection => pt_report_schedule.pt_report_receivers %>  
    <% else %>
      No report receivers selected
    <% end %>
  </p>
</div>   

