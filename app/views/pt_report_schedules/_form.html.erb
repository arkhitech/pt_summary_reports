<%= form_for([@pt_report_schedule.pt_account, @pt_report_schedule], 
  :html => { :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <div class="control-group"">
      <%= f.label :report_time, 'Report Time', class: 'control-label' %>
      <div class="controls">
        <%= f.time_select :report_time, class: :time_select %> UTC
      </div>
    </div>
    <div class="control-group">
      <h4>Report Receivers</h4>
      <div class="controls">
        <%= pt_report_receiver_checkboxes(@pt_report_schedule) %>
      </div>  
    </div>
    <div class="form-actions">
      <%unless @pt_report_schedule.new_record? %>
        <%= f.submit 'Update Schedule', class:'btn btn-primary'%>
        <%= link_to 'Back', @pt_report_schedule.pt_account, class: 'btn' %>
      <% else %>
        <%= f.submit 'Create Schedule', class:'btn btn-primary'%>
      <% end %>
    </div>
  </fieldset>
<% end %>
